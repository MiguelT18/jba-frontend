---
import { Icon } from "astro-icon/components";

interface CardsData {
  icon: string;
  title: string;
  description: string;
}

const cardsData: CardsData[] = [
  {
    icon: "material-symbols:license",
    title: "Certificación Estatal",
    description:
      "Obtén certificaciones reconocidas por el estado de Virginia que te abren puertas en la industria de la belleza.",
  },
  {
    icon: "lucide:users",
    title: "Instructores Expertos",
    description:
      "Aprende de profesionales con años de experiencia en la industria de cosmetología y estética.",
  },
  {
    icon: "lucide:alarm-clock",
    title: "Programas Flexibles",
    description:
      "Horarios adaptados a tu ritmo de vida para que puedas estudiar sin comprometer tus responsabilidades.",
  },
  {
    icon: "lucide:chart-no-axes-combined",
    title: "Carreras Prometedoras",
    description:
      "Abre nuevas oportunidades profesionales con habilidades demandadas en el mercado laboral.",
  },
];
---

<style>
  /* .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    align-items: stretch;
  } */
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    grid-auto-rows: 1fr;
    gap: 1rem;
  }
</style>

<section class='bg-pink-100/30 py-10 container mx-auto'>
  <div class='flex flex-col gap-2 mb-4'>
    <h1 class='block text-2xl font-bold text-center'>
      Beneficios de Nuestros Programas
    </h1>
    <p class='block text-md text-gray-600 text-balance text-center'>
      Descubre por qué miles de estudiantes eligen Jolimia Beauty Academy para
      su futuro profesional
    </p>
  </div>

  <div class='grid px-4'>
    {
      cardsData.map((card) => (
        <article class='bg-white p-4 rounded-xl shadow-black/10 shadow-md'>
          <Icon
            name={card.icon}
            class='size-12 text-white bg-linear-to-br from-pink-500 to-primary p-2 rounded-lg'
          />

          <div class='mt-4 space-y-1'>
            <h2 class='block text-lg font-bold'>{card.title}</h2>
            <p class='block text-sm text-gray-600'>{card.description}</p>
          </div>
        </article>
      ))
    }
  </div>
</section>
